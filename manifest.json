{
    "name": "Google Scholar Search Helper",
    "description": "Authorized Google Scholar Data Crawling Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "128": "icon128.png"
    },
    "host_permissions": [
        "https://*/*"
    ],
    "permissions": [
        "activeTab",
        "tabs"
    ]
}